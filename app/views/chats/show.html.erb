<h2 style="text-align:center"><%="#{@partner.nickname}さんとのチャット"%></h2>
<div id="chats">
  <% @chats.each do |chat|%>
    <%if chat.user_id==user_id%>
      <div class="mycomment">
        <p><%=chat.sentence%></p>
      </div>
    <%else%>
      <div class="fukidasi">
        <div class="faceicon">
          <img src="/assets/profile.png" alt="相手">
        </div>
        <div class="chatting">
          <div class="says">
            <p><%=chat.sentence%></p> 
        </div>
      </div>
      </div>
    <%end%>
  <%end%>
</div>
