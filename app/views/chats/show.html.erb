<h2 style="text-align:center">
  <%="#{@partner.nickname}さんとのチャット" %>
</h2>
<div id="chats">
  <% @chats.each do |chat|%>
    <%if chat.user_id==current_user.id%>
      <div class="mycomment">
        <p><%=chat.sentence%></p>
      </div>
    <%else%>
      <div class="fukidasi">
        <div class="faceicon">
          <%= image_tag @partner.picture, class:"user-picture" %>
          <%# <img src="/assets/profile.png" alt="相手"> %>
        </div>
        <div class="chatting">
          <div class="says">
            <p><%=chat.sentence%></p>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</div>

<form>
  <label>Say something:</label><br>
  <input type="text" data-behavior="chat_speaker">
  <input id="current_user_id" type="hidden" value= "<%=current_user.id%>">
  <input id="partner_id" type="hidden" value= "<%=@partner.id%>">
</form>
